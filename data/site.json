{
    "main": {
        "defaultSection": "home",
        "frameworkHostMap": {
            "//formbanc.dev.com": "//ui.formbanc.dev.com"
        },
        "dataHostMap": {
            "//formbanc.dev.com": "//formbanc.dev.com/data"
        }
    },
    "view": {
        "transition": {
            "duration": 300,
            "effect": "slide",
            "easing": "linear"
        },
        "defaultTitle": "FormBanc"
    },
    "route": {
        "home": {
            "view": "HomeView"
        },
        
        ":formUrl": {
            "view": "FormView",
            "args": ["formUrl"]
        },

        ":formUrl/:pageUrl": {
            "view": "PageView",
            "args": ["formUrl", "pageUrl"]
        }
    },
    "require": {
        "paths": {
            "theme": "theme/formbanc"
        }
    }
}